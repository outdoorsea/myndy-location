# Location Intelligence Service Configuration
# File: location-intelligence/.env.example

# Database
DATABASE_URL=postgresql://location_user:password@location-postgres:5432/location_intelligence

# Myndy API Postgres (for sync)
MYNDY_API_POSTGRES_URL=postgresql://myndy_user:password@myndy-api-postgres:5432/myndy_api

# Redis
REDIS_URL=redis://redis:6380

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secure-api-key-here

# Location Intelligence Settings
CLUSTER_RADIUS_METERS=50
MIN_POINTS_FOR_PLACE=2
MIN_DURATION_MINUTES=1
SIGNIFICANT_POINT_THRESHOLD=5

# Geocoding
NOMINATIM_USER_AGENT=location-intelligence-service
NOMINATIM_RATE_LIMIT_SECONDS=1.2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_GPS_POINTS_PER_QUERY=5000
CACHE_TTL_SECONDS=300
BATCH_SIZE=1000

# Scheduler
INGESTION_CRON="*/15 * * * *"
ANALYSIS_CRON="0 * * * *"
CHECKIN_SYNC_CRON="*/15 * * * *"
